<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QCTestPointXiaomiRSAHelper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
    </style>

    <style name="Theme.TestPoint" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dynamic colors will override these on Android 12+ -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        
        <!-- Keep your existing system bars configuration -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Override SearchView style for dark mode -->
    <style name="Widget.App.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryHint">Search test points...</item>
        <item name="android:textColorHint">@color/md_theme_dark_onSurface</item>
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
    </style>

    <!-- Add this style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="rippleColor">@color/md_theme_dark_primaryContainer</item>
        <item name="cardBackgroundColor">@color/md_theme_dark_surface_1</item>
    </style>

    <!-- Add this style -->
    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/md_theme_dark_surface_2</item>
        <item name="itemIconTint">@color/nav_item_colors_dark</item>
        <item name="itemTextColor">@color/nav_item_colors_dark</item>
        <item name="itemIconPadding">16dp</item>
        <item name="itemHorizontalPadding">24dp</item>
    </style>

    <!-- Add this style -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/md_theme_dark_surface_4</item>
        <item name="tint">@color/md_theme_dark_primary</item>
    </style>
</resources>